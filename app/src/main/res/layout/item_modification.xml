<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/scaled_formula_modification"
    android:layout_height="@dimen/scaled_formula_modification"
    android:background="@drawable/bg_corners_full"
    android:gravity="center"
    android:orientation="horizontal"
    tools:backgroundTint="#B3D1FF">

    <TextView
        android:id="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLength="1"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        tools:text="1"
        tools:textColor="?attr/colorOnSurface" />

    <TextView
        android:id="@+id/tv_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold_italic"
        android:gravity="center"
        android:maxLength="1"
        android:textAppearance="?attr/textAppearanceTitleMedium"
        tools:text="S"
        tools:textColor="?attr/colorOnSurface" />

</LinearLayout>
